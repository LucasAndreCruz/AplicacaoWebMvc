@model IEnumerable<AplicacaoWebMvc.Models.Pessoa>
@{
    ViewData["Title"] = "Lista de Pessoas";
}

<h2>@ViewData["Title"]</h2>

<!-- Botão para acionar modal -->


<button type="button" class="btn btn-light" data-toggle="modal" data-target="#ModalConfirmacao">
    Adicionar Novo
</button>

<!-- Modal -->
<div class="modal fade" id="ModalConfirmacao" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
                <br />
                <br />
                <h3 class="modal-title text-center" id="TituloModalCentralizado">CONFIRMAÇÃO!</h3>
            </div>
            <div class="modal-body">
                <span class="text-danger">
                    Gostaria de verificar se a Pessoa já está cadastrada?
                </span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">
                    Sim
                </button>
                <a asp-action="Create" class="btn btn-default" >Não</a>
            </div>
        </div>
    </div>
</div>
<br /><br />


<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDeNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoCivil)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataDeNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoCivil)
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PessoaId" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.PessoaId" class="btn btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.PessoaId" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

